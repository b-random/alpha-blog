<h2 align="center">All Categories</h2>


<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <div class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category), class: 'article-link' %>
            <!--category_path == show page-->
          </li>
          <li>
            <small><p><%= pluralize(category.articles.count, "article") %></p></small>
          </li>
        </div>
      </div>
    </div>  
  <% end %>
  <%= will_paginate %>
</div>

