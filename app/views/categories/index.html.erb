<h2 align="center">All Categories</h2>


<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <div class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category) %>
            <!--category_path == show page-->
          </li>
        </div>
      </div>
    </div>  
  <% end %>
  <%= will_paginate %>
</div>

