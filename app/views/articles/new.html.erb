<h3>Create an article</h3>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/> <!--line breaks for for layout-->
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/> <!--line breaks for for layout-->
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p> 
<% end %>