<h1 align="center"><%= @user.username %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4" align="center">
    <%= gravatar_for @user, size: 170 %>
    <!--size: 150 overrides the default size called in the gravatar method @ application_helpers.rb-->
  </div>
</div>  
<h4 align="center"><%= @user.username %>'s articles</h4>

<%= render 'articles/article', obj: @user.articles %>